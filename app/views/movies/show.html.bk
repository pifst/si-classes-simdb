%h2
  = @movie.title
  = link_to edit_movie_path(@movie), :class => 'btn' do
    %i.icon-edit

%h4= @movie.tagline

.movie-data
  %dl
    %dt Release Date
    %dd= @movie.released_on
    %dt The Movie Database ID
    %dd= @movie.tmdb_id
    %dt Internet Movie Database ID
    %dd= @movie.imdb_id

  %p= @movie.description
  = image_tag @movie.poster_url, :size => "500x400"
